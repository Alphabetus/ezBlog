<!-- section wrapper -->
<div id="section_wrapper_post" class="px-0 mx-0">
<p id="notice"><%= notice %></p>
  <!-- title -->
  <div class="row header">
    <div class="col-6">
      <h1>::posts/read> <%= @post.title %>.</h1>
    </div>

    <div class="col-6 text-right">
      <span id="live_clock"></span>
    </div>
  </div>
  <!-- /title -->

  <!-- post -->
  <div class="row post_wrapper justify-content-center">

    <div class="col-12 col-md-8 border rounded bg-light">

      <div class="col-12 p-0">
        <h3 class="mt-2"><%= @post.title %></h3>
        <p class="text-justify"><%= @post.message %></p>
      </div>

      <div class="col-12 p-0 border-top post_meta">

        <div class="row py-2 border-bottom">
          <div class="col-6 text-left p-0 align-self-center">
            <div class="col-6 px-0">
              <%= link_to "back", root_path, class: "btn btn-outline-secondary btn-sm" %>
              <%= link_to 'Edit', edit_post_path(@post), class: "btn btn-outline-warning btn-sm" %>
            </div>
          </div>

          <div class="col-6 text-right p-0 align-self-center">
            <%= @post.updated_at %>
          </div>
        </div>

        <div class="row">
          <div class="col-12 p-0 pt-2">
            <div class="fb-comments" data-href="http://<%= request.host+request.fullpath %>" data-width="100%" data-numposts="5"></div>
          </div>
        </div>



      </div>

    </div>

  </div>
  <!-- /post -->

</div>
<!-- /section wrapper -->
